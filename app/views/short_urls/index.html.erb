<% if @errors.present? %>
  <%= @errors.join(', ') %>
<% end %>

<%= form_tag do %>
  <%= label_tag(:url, "Url:") %>
  <%= text_field_tag(:url) %>
  <%= submit_tag("Save") %>
<% end %>

<% if @short_url.present? %>
  <div>Your new link is here:</div>
  <div><%= link_to(nil, "/#{@short_url.short_url}", target: "_blank") %>
<% end %>